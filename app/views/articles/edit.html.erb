<%= form_for @article, method: :patch do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title, "value" => @article.title%>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text, :value => @article.text%>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>
 
<%= link_to 'Back', articles_path %>