<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>
<!--
  UsersController # create

  form_for(@user)
 => allows Rails to infer that
    the action of the form should be to POST to the URL /users,
-->
    <%= form_for(@user) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Create my account" %>
    <% end %>